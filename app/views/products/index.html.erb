<h2>產品清單</h2>

<%= link_to "new", new_product_path, class: "btn btn-default btn-xs" %>

<table class="table table-bordered">
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to "edit", edit_product_path(product), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to "delete", product_path(product), method: :delete, class: "btn btn-default btn-xs", data: { confirm: "are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
